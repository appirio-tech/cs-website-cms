<h2>Sign in</h2>
<%= content_tag :div, flash[:alert], class: "alert alert-error" if flash[:alert] %>
<%= simple_form_for(resource, :as => resource_name, :url => user_session_path(resource)) do |f| %>

  <div class="inputs">
    <%= f.input :username, :required => false, :autofocus => true %>
    <%= f.input :password, :required => false %>
    <%= f.input :remember_me, :as => :boolean if devise_mapping.rememberable? %>
  </div>

  <div class="actions">
    <%= f.button :submit, "Sign in" %>
  </div>
<% end %>

<%= render "users/links" %>